{
	"name": "aim-display",
	"version": "1.0.0",
	"main": "electron/main.js",
	"author": {
		"name": "Hugo Eribon",
		"url": "https://hugoeribon.fr/"
	},
	"description": "Une plateforme complète pour organiser, suivre, diffuser et analyser vos compétitions de tir sportif.",
	"private": true,
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"watch": "ng build --watch --configuration development",
		"test": "ng test",
		"build:ng": "ng build --configuration production",
		"build:electron": "ng build --configuration production --base-href ./",
		"electron:dev": "concurrently -k -s first -n \"NG,ELECTRON\" -c \"bgBlue.bold,bgMagenta.bold\" \"ng serve --host=localhost --port=4200\" \"wait-on http://localhost:4200 && cross-env ELECTRON_OPEN_DEVTOOLS=1 electron .\"",
		"electron:prod": "npm run build:electron && electron .",
		"pack": "npm run build:electron && electron-builder --dir",
		"dist": "npm run build:electron && electron-builder -wml",
		"dist:win": "npm run build:electron && electron-builder --win",
		"dist:mac": "npm run build:electron && electron-builder --mac",
		"dist:linux": "npm run build:electron && electron-builder --linux"
	},
	"build": {
		"appId": "com.example.aimdisplay",
		"protocols": [
			{
				"name": "AimDisplay Links",
				"schemes": [
					"aimdisplay"
				]
			}
		],
		"files": [
			"dist/**/*",
			"electron/**/*"
		],
		"directories": {
			"output": "release"
		},
		"win": {
			"target": "nsis",
			"icon": "electron/icons/logo.ico",
			"artifactName": "aim-display-Setup-${version}.${ext}"
		},
		"mac": {
			"category": "public.app-category.productivity",
			"icon": "electron/icons/logo.icns"
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"icon": "electron/icons/icon.png"
		}
	},
	"dependencies": {
		"@angular/common": "^19.2.0",
		"@angular/compiler": "^19.2.0",
		"@angular/core": "^19.2.0",
		"@angular/forms": "^19.2.0",
		"@angular/platform-browser": "^19.2.0",
		"@angular/platform-browser-dynamic": "^19.2.0",
		"@angular/router": "^19.2.0",
		"@ngx-translate/core": "^16.0.4",
		"@ngx-translate/http-loader": "^16.0.1",
		"@primeng/themes": "^19.1.3",
		"@supabase/supabase-js": "^2.53.0",
		"@tailwindcss/postcss": "^4.1.7",
		"axios": "^1.9.0",
		"electron-updater": "^6.6.2",
		"file-saver": "^2.0.5",
		"iconify-icon": "^3.0.0",
		"pdfmake": "^0.2.20",
		"postcss": "^8.5.3",
		"primeflex": "^4.0.0",
		"primeicons": "^7.0.0",
		"primeng": "^19.1.3",
		"rxjs": "~7.8.0",
		"sweetalert2": "^11.6.13",
		"tailwindcss": "^4.1.7",
		"tslib": "^2.3.0",
		"zone.js": "~0.15.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^19.2.12",
		"@angular/cli": "^19.2.12",
		"@angular/compiler-cli": "^19.2.0",
		"@types/file-saver": "^2.0.7",
		"@types/jasmine": "~5.1.0",
		"@types/pdfmake": "^0.2.11",
		"autoprefixer": "^10.4.21",
		"concurrently": "^9.2.1",
		"cross-env": "^10.0.0",
		"electron": "^37.4.0",
		"electron-builder": "^26.0.12",
		"electron-icon-builder": "^2.0.1",
		"icon-gen": "^5.0.0",
		"jasmine-core": "~5.6.0",
		"karma": "~6.4.0",
		"karma-chrome-launcher": "~3.2.0",
		"karma-coverage": "~2.2.0",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.1.0",
		"png-to-ico": "^3.0.1",
		"sharp": "^0.34.3",
		"typescript": "~5.7.2",
		"wait-on": "^8.0.4"
	}
}
